<resources>

    <!-- Color of the text describing an unconsumed voicemail. -->
    <color name="call_log_voicemail_highlight_color">@*common:color/theme_maincolor_light</color>

    <!-- Colour of voicemail progress bar to the left of position indicator. -->
    <color name="voicemail_playback_seek_bar_already_played">@*common:color/theme_maincolor_bright</color>

    <!-- Standard color for selected items. -->
    <color name="item_selected">@*common:color/theme_maincolor_light_66</color>

    <!-- Primary color of dialpad text, including the call button -->
    <color name="dialpad_primary_text_color">@*common:color/theme_maincolor_light</color>
	<!-- Call button color separated from dialpad_primary_text_color, for better theme support -->

    <!-- Colors for incoming and outgoing calls in the call statistics -->
    <color name="call_stats_incoming">@*common:color/theme_maincolor_light</color>
    <color name="call_stats_outgoing">#99cc00</color>

    <!-- New Colors for Theme Chooser to be compatible -->
    <color name="call_log_header_color">@*common:color/theme_maincolor_dark</color>
    <color name="call_log_voicemail_status_action_text_color">@*common:color/theme_maincolor_light</color>

    <!-- Color of the underline for a tab which is selected. -->
    <color name="tab_underline_selected_color">@*common:color/theme_maincolor_dark</color>

    <!-- Color of the selection indicator for a tab which is selected. -->
    <color name="tab_selected_color">@*common:color/theme_maincolor_dark</color>

    <!-- Underline color of action bars.  Ensure this stays in sync with packages/Telephony
         actionbar_underline. -->
    <color name="actionbar_underline">@*common:color/theme_maincolor_dark</color>

    <!-- In-call UI -->
    <color name="incall_secondary_info_background">@*common:color/theme_maincolor_light_70</color> <!-- semitransparent blueish grey -->
    <!-- Color of the theme of the People app -->
    <color name="people_app_theme_color">@*common:color/theme_maincolor_light</color>
    <!-- Background color of action bars -->
    <color name="actionbar_background_color">@*common:color/theme_maincolor_light</color>

</resources>
